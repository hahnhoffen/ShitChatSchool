    <Grid
        Width="460"
        Height="310"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Background="#FF336444"
        RenderTransformOrigin="0.511,0.612">

        <Button
            x:Name="Register_Btn"
            Width="70"
            Height="32"
            Margin="0,0,20,10"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Click="ToRegisterWindow"
            Content="Register"
            Cursor="Hand"
            Style="{DynamicResource ButtonStyle3}" TabIndex="4">
            <Button.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.WindowColorKey}}" />
            </Button.Background>
        </Button>
        <TextBox
            x:Name="UserName_box"
            Width="170"
            Height="30"
            Margin="150,120,0,160"
            HorizontalAlignment="Left"
            Background="White"
            Style="{DynamicResource TextBoxStyle2}" TabIndex="0" />
        <Label
            Width="100"
            Margin="47,124,0,158"
            HorizontalAlignment="Left"
            Content="Username/Email:">
            <Label.Foreground>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.WindowColorKey}}" />
            </Label.Foreground>
        </Label>
        <Label
            Width="63"
            Margin="82,172,0,110"
            HorizontalAlignment="Left"
            Content="Password:">
            <Label.Foreground>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.WindowColorKey}}" />
            </Label.Foreground>
            <Label.Background>
                <SolidColorBrush />
            </Label.Background>
        </Label>
        <Label
            Margin="93,8,0,42"
            Content="Register Here!"
            Foreground="#FFFB730A"
            Visibility="Hidden" />
        <Button
            x:Name="Login_Btn"
            Width="78"
            Height="32"
            Margin="0,205,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Click="Login_Btn_Click"
            Content="Login"
            Cursor="Hand"
            Style="{DynamicResource ButtonStyle1}" TabIndex="3">
            <Button.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.WindowColorKey}}" />
            </Button.Background>
        </Button>
        <Button
            x:Name="Register_Btn_Copy"
            Width="70"
            Height="32"
            Margin="18,0,0,10"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
