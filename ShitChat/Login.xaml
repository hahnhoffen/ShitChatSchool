            Cursor="Hand"
            Style="{DynamicResource ButtonStyle2}" TabIndex="5">
            <Button.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.WindowColorKey}}" />
            </Button.Background>
        </Button>
        <Label
            x:Name="ErrorLabel"
            Grid.Row="1"
            Width="194"
            Height="28"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Could not find user or password!"
            Foreground="#FFF2A80B"
            Visibility="Hidden" />
        <Label
            x:Name="Register_label"
            Margin="365,242,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Register here"
            Visibility="Hidden">
            <Label.Foreground>
                <SolidColorBrush Color="#FFFA0B0B" />
            </Label.Foreground>
        </Label>
        <Image
            x:Name="Icon_image"
            Margin="196,10,202,233"
            Source="/shit.png"
            Stretch="Fill" />
        <Label
            Width="86"
            Margin="0,72,0,210"
            HorizontalAlignment="Center"
            Content="ShitChat"
            FontSize="17">
            <Label.Foreground>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.WindowColorKey}}" />
            </Label.Foreground>
        </Label>
        <PasswordBox Style="{DynamicResource PasswordBoxStyle1}" 
            x:Name="Psw_Box"  
            MaxLength="25"
            Width="170"
            Height="30"
            HorizontalAlignment="Left"
            Background="White" Margin="150,167,0,113" TabIndex="1" />

    </Grid>
